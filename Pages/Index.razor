@page "/"

<div class="main">
    <h1>Blazing Pizzas!</h1>

    <ul class="pizza-cards">
        @if (pizzaSpecials != null && pizzaSpecials.Any())
        {
            @foreach (var pizzaSpecial in pizzaSpecials)
            {
                <li style="background-image: url('@pizzaSpecial.ImageUrl')">
                    <div class="pizza-info">
                        <span class="title">@pizzaSpecial.Name</span>
                        @pizzaSpecial.Description
                        <span class="price">@pizzaSpecial.GetFormattedBasePrice()</span>
                    </div>
                </li>
            }
        }
    </ul>
</div>


